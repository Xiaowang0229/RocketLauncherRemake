						<StackPanel Margin="20,2.5,2.5,2.5">
							<TextBlock  Text="Rocket Launcher" FontSize="20" FontFamily="Microsoft YaHei UI" FontWeight="Bold" Margin="1"/>
							<TextBlock  Text="©Xiaowang Software. 保留所有权利" FontSize="13"  Foreground="Gray" FontFamily="Microsoft YaHei UI" Margin="1,-1,1,1"/>
						</StackPanel>
					</StackPanel>
				</ui:SettingsExpander.Header>

				<StackPanel Margin="5">
					<Grid Margin="0,0,0,5">
						<TextBlock Text="{x:Static local:Variables.ShowVersion}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
						<Button Width="120" Click="ChkUpd_Click" Content="检测更新" HorizontalAlignment="Right" VerticalAlignment="Center"/>

					</Grid>
					<Separator/>
					<StackPanel Margin="0,0,0,5">
						<TextBlock Text="更新日志" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,0,5"/>
						<md:MarkdownScrollViewer x:Name="Updatelog" xml:space="preserve" />
					</StackPanel>
				</StackPanel>

			</ui:SettingsExpander>
			<ui:SettingsExpander Margin="0,5,0,0">
				<ui:SettingsExpander.Header>
					<Grid>
						<StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
							<ic:FluentIcon Icon="Share" Height="32" Width="32" FontSize="32" Margin="10"/>
							<TextBlock Text="相关链接" VerticalAlignment="Center" Margin="10,0,0,0" />
						</StackPanel>

					</Grid>

				</ui:SettingsExpander.Header>
				<StackPanel Margin="5">
					<Grid Margin="5">
						<StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
							<TextBlock Text="访问本仓库" VerticalAlignment="Center"/>
						</StackPanel>
						<StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
							<HyperlinkButton Content="https://github.com/Xiaowang0229/RocketLauncherRemake" x:Name="RepoLink" Click="RepoUrl_Click"/>
						</StackPanel>
					</Grid>
					<Separator/>
					<Grid Margin="5">
						<StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
							<TextBlock Text="上报漏洞信息" VerticalAlignment="Center"/>
						</StackPanel>
						<StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
							<HyperlinkButton Content="https://github.com/Xiaowang0229/RocketLauncherRemake/issues" x:Name="IssueLink" Click="IssueUrl_Click"/>
						</StackPanel>
					</Grid>
				</StackPanel>
			</ui:SettingsExpander>

			<ui:SettingsExpander Margin="0,5,0,0">
				<ui:SettingsExpander.Header>
					<Grid>
						<StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
							<ic:FluentIcon Icon="Info" Height="32" Width="32" FontSize="32" Margin="10"/>
							<TextBlock Text="本程序所使用的第三方库" VerticalAlignment="Center" Margin="10,0,0,0" />
						</StackPanel>

					</Grid>

				</ui:SettingsExpander.Header>
				<StackPanel Margin="5">
					<HyperlinkButton Content="Avalonia" Click="Url_Click" Tag="https://github.com/AvaloniaUI/Avalonia"/>
					<HyperlinkButton Content="Avalonia.Desktop" Click="Url_Click" Tag="https://github.com/AvaloniaUI/Avalonia"/>
					<HyperlinkButton Content="Avalonia.Themes.Fluent" Click="Url_Click" Tag="https://github.com/AvaloniaUI/Avalonia"/>
					<HyperlinkButton Content="Markdown.Avalonia" Click="Url_Click" Tag="https://github.com/whistyun/Markdown.Avalonia"/>
					<HyperlinkButton Content="FFmpegVideoPlayer.Avalonia" Click="Url_Click" Tag="https://github.com/jojomondag/Avalonia.VlcVideoPlayer"/>
					<HyperlinkButton Content="FluentAvaloniaUI (本程序所使用的UI)" Click="Url_Click" Tag="https://github.com/amwx/FluentAvalonia"/>
					<HyperlinkButton Content="FluentIcons.Avalonia.Fluent" Click="Url_Click" Tag="https://github.com/davidxuang/FluentIcons"/>
					<HyperlinkButton Content="Hardcodet.Notifyicon.Wpf" Click="Url_Click" Tag="https://github.com/hardcodet/wpf-notifyicon"/>
					<HyperlinkButton Content="Ookii.Dialogs.Wpf" Click="Url_Click" Tag="https://github.com/ookii-dialogs/ookii-dialogs-wpf"/>
					<TextBlock Text="由衷向以上开发者们致以崇高的谢意!"/>
				</StackPanel>
			</ui:SettingsExpander>

		<ui:SettingsExpander Margin="0,5,0,0" x:Name="EULAExpander">
			<ui:SettingsExpander.Header>
				<Grid>
					<StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
						<ic:FluentIcon Icon="Document" Height="32" Width="32" FontSize="32" Margin="10"/>
						<TextBlock Text="许可协议与隐私政策" VerticalAlignment="Center" Margin="10,0,0,0" />
						
					</StackPanel>

				</Grid>

			</ui:SettingsExpander.Header>
			<StackPanel Margin="5" Orientation="Horizontal">
				<ScrollViewer>
					<md:MarkdownScrollViewer x:Name="EULA" xml:space="preserve" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
				</ScrollViewer>
				
			</StackPanel>
